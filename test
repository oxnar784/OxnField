-- Crear una GUI
local gui = Instance.new("ScreenGui")
gui.Name = "EmularTeclaGUI"
gui.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui")

-- Crear un botón en la GUI
local button = Instance.new("TextButton")
button.Name = "EmularZButton"
button.Size = UDim2.new(0, 100, 0, 30)
button.Position = UDim2.new(0.5, -50, 0.5, -15)
button.Text = "Z"
button.FontSize = Enum.FontSize.Size18
button.Parent = gui

-- Función para emular la pulsación de la tecla
local function emularTecla()
    local userInputService = game:GetService("UserInputService")

    -- Emular la pulsación de la tecla 'Z'
    userInputService:AddKeyEvent(Enum.KeyCode.Z, Enum.UserInputType.Keyboard, true)

    -- Esperar un breve momento antes de liberar la tecla emulada
    wait(0.1)

    -- Liberar la tecla 'Z'
    userInputService:AddKeyEvent(Enum.KeyCode.Z, Enum.UserInputType.Keyboard, false)
end

-- Manejar el evento de clic del botón
button.MouseButton1Click:Connect(function()
    emularTecla()
end)
